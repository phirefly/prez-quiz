
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:inputType="text" />

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/question_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading question..."/>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/q1_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer TBD"
        android:background="@android:color/darker_gray"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question1_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/option_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading Option 1"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/option_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading Option 2"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/option_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading Option 3"/>
    </RadioGroup>


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/question_display_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which of the following presidents came before Abraham Lincoln?"/>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/q2_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer TBD"
        android:background="@android:color/darker_gray"
        />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/q2_option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Andrew Jackson"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/q2_option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Millard Fillmore"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/q2_option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rutherford B. Hayes"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/q2_option4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="James Madison"/>



    <TextView
        android:paddingTop="20dp"
        android:id="@+id/question_display_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What does the 'S' in Harry S Truman stand for?"/>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/q3_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer TBD"
        android:background="@android:color/darker_gray"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/option_3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saul"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/option_3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skipper"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/option_3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Samuel"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/option_3_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nothing"/>
    </RadioGroup>

    <TextView
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which president do you look like the most?"/>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/q4_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer TBD"
        android:background="@android:color/darker_gray"
        />

    <EditText
        android:id="@+id/lookalike_president"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a president's name"
        android:inputType="text" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit my answers"
            android:onClick="checkAnswers"
            />

    </RelativeLayout>
</LinearLayout>
</ScrollView>

